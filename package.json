{
  "name": "forgit-me-not",
  "version": "1.0.0",
  "description": "open source writing software with version control",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icons/mac/icon.icns --prune=true --out=release-builds",
    "package-win": "electron-packager . ForgitMeNot --overwrite --asar=true --platform=win32 --arch=ia32 --icon=assets/icons/win/icon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"ForgitMeNot\"",
    "package-linux": "electron-packager . ForgitMeNot --overwrite --asar=true --platform=linux --arch=x64 --icon=assets/icons/png/1024x1024.png --prune=true --out=release-builds"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FunnyB0y/forgit-me-not.git"
  },
  "author": "Alexander Lau",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/FunnyB0y/forgit-me-not/issues"
  },
  "homepage": "https://github.com/FunnyB0y/forgit-me-not#readme",
  "devDependencies": {
    "electron": "1.7.9",
    "electron-packager": "^9.1.0",
    "spectron": "^3.7.2"
  },
  "dependencies": {
    "jquery": "^3.2.1",
    "nodegit": "^0.20.3",
    "vue-electron": "^1.0.6"
  }
}
